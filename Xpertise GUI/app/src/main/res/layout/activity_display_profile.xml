            android:layout_height="50dp"
            android:id="@+id/desc"
            android:textSize="20dp"
            android:textStyle="italic"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
